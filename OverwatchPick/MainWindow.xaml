<Window x:Class="OverwatchPick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverwatchPick"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Overwatch Pick v 0.1 Alpha" Height="450" Width="800">
    <Grid Background="#FF181818">
        <TextBlock HorizontalAlignment="Left" Margin="10,28,0,0" TextWrapping="Wrap" Text="Случайный герой overwatch" VerticalAlignment="Top" Height="68" Width="772" Foreground="White" FontSize="55" TextAlignment="Center" FontFamily="/OverwatchPick;component/#BigNoodleTooOblique"/>
        <Button Content="Выбрать" HorizontalAlignment="Left" Margin="263,275,0,0" VerticalAlignment="Top" Width="258" Height="46" Background="#FF135A93" Foreground="White" BorderBrush="{x:Null}" FontFamily="/OverwatchPick;component/#Koverwatch" FontSize="36" Click="Button_Click"/>
        <TextBlock x:Name="yourheroes" HorizontalAlignment="Left" Margin="348,111,0,0" TextWrapping="Wrap" Text="ваш герой" VerticalAlignment="Top" FontSize="19" Height="25" Width="97" Foreground="White" FontFamily="/OverwatchPick;component/#Koverwatch" TextAlignment="Center"/>
        <TextBlock x:Name="heroes" HorizontalAlignment="Left" Margin="10,136,0,0" TextWrapping="Wrap" Text="*выбранный герой*" VerticalAlignment="Top" FontSize="45" Height="60" Width="774" Foreground="#FFD7B940" FontFamily="/OverwatchPick;component/#BigNoodleTooOblique" TextAlignment="Center"/>

    </Grid>
</Window>
